<div class="box has-text-centered columns m-2">
  <div class="column">
    <img src="/images/empire-state-building.png" width="60" alt="img"/>
  </div>
  <div class="column">
    <div class="title is-5"> {{title}} </div>
    <div class="subtitle is-5"> {{subTitle}} </div>
  </div>
  <div class="column">
    <i class="fas fa-map fa-3x" style="color:rgb(133, 196, 221)"></i>
    {{#if user}}
      <div class="is-size-7">{{user.firstName}} {{user.lastName}}</div>
    {{else}}
      <div class="is-size-7">Placemark-Hapi 0.1</div>
    {{/if}}
  </div>
</div>